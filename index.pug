doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="style.css")
        title Document
    body
        header
            nav.navbar.navbar-expand-lg.navbar-light.bg-light.d-lg-none.fixed-top
                .container-fluid
                    a.navbar-brand.fw-bold(href='#') ewright
                    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                    #navbarSupportedContent.collapse.navbar-collapse
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link.active(aria-current='page' href='#') Home
                            li.nav-item
                                a.nav-link(href='#') Link 
        main.pt-3
            .wrapper 
                .sidebar 
                    .container.h-100 
                        .row.flex-column.justify-content-center.align-items-center.h-100
                            .col-12.d-none.d-lg-block 
                                .h3.fw-bold.text-dark ewright
                            .col-12
                                ul#pills-tab.nav.nav-pills.justify-content-center.flex-lg-column(role='tablist')
                                    li.nav-item(role='presentation')
                                        button#pills-home-tab.nav-link.active.w-100(data-bs-toggle='pill' data-bs-target='#pills-home' type='button' role='tab' aria-controls='pills-home' aria-selected='true') Home
                                    li.nav-item(role='presentation')
                                        button#pills-profile-tab.nav-link.w-100(data-bs-toggle='pill' data-bs-target='#pills-profile' type='button' role='tab' aria-controls='pills-profile' aria-selected='false') Profile
                                    li.nav-item(role='presentation')
                                        button#pills-contact-tab.nav-link.w-100(data-bs-toggle='pill' data-bs-target='#pills-contact' type='button' role='tab' aria-controls='pills-contact' aria-selected='false') Contact

                .main-content
                    .container
                        .row.mt-5
                            .col-6.ms-auto.text-end 
                                span.fab.fa-linkedin
                                span.fab.fa-youtube.mx-2
                                span.fab.fa-behance
                        
                            
                        block screen-content 
                            .row
                                #pills-tabContent.tab-content
                                    #pills-home.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='pills-home-tab')
                                        include ./includes/home-content.pug
                                    #pills-profile.tab-pane.fade(role='tabpanel' aria-labelledby='pills-profile-tab') ...
                                    #pills-contact.tab-pane.fade(role='tabpanel' aria-labelledby='pills-contact-tab') ...
                                

                   
        footer 
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js")
        script(src="main.js")